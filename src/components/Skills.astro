---
import html5 from '../images/html_5.png'
import css3 from '../images/css_3.png'
import wordPress from '../images/wordpress.png'
import tailWind from '../images/tailwind.png'
---
<div id="skills">
    <p class="text-3xl lg:text-xl text-white text-center font-bold">Sviluppo</p>
    <div class="neu-up w-auto border border-slate-500/20 mb-4 rounded-xl flex items-center justify-center place-content-between px-6 py-4 lg:px-4 lg:py-2 gap-2 mt-4">
        <img class="w-[12%] 2xl:w-[15%]" src={html5.src}/>
        <span class="text-white ml-2 text-base">HTML 5</span>
    </div>
    <div class="neu-up w-auto border border-slate-500/20 mb-4 rounded-xl flex items-center justify-center place-content-between px-6 py-4 lg:px-4 lg:py-2 gap-2 mt-4">
        <img class="w-[12%] 2xl:w-[15%]" src={css3.src}/>
        <span class="text-white ml-2 text-base">CSS 3</span>
    </div>
    <div class="neu-up w-auto border border-slate-500/20 mb-4 rounded-xl flex items-center justify-center place-content-between px-6 py-4 lg:px-4 lg:py-2 gap-2 mt-4">
        <img class="w-[12%] 2xl:w-[15%]" src={wordPress.src}/>
        <span class="text-white ml-2 text-base">Wordpress</span>
    </div>
    <div class="neu-up w-auto border border-slate-500/20 mb-4 rounded-xl flex items-center justify-center place-content-between px-6 py-4 lg:px-4 lg:py-2 gap-2 mt-4">
        <img class="w-[12%] 2xl:w-[15%]" src={tailWind.src}/>
        <span class="text-white ml-2 text-base">Tailwind CSS</span>
    </div>
</div>